# ==============================================
# DEVELOPMENT ENVIRONMENT
# ==============================================
# Este archivo es para desarrollo local
# Copia este archivo a .env.development y ajusta los valores

# Application
APP_NAME=fashion-blue-dev
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=fashionblue
DB_PASSWORD=fashionblue123
DB_NAME=fashionblue_db
DB_SSLMODE=disable

# JWT - Usa una clave simple para desarrollo
JWT_SECRET=dev-secret-key-not-for-production
JWT_EXPIRATION=24h

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS - Permite todos los or√≠genes en desarrollo
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# pgAdmin
PGADMIN_EMAIL=admin@fashionblue.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050
