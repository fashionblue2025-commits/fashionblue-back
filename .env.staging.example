# ==============================================
# STAGING ENVIRONMENT
# ==============================================
# Este archivo es para el ambiente de staging/pre-producción
# Copia este archivo a .env.staging y ajusta los valores

# Application
APP_NAME=fashion-blue-staging
APP_ENV=staging
APP_PORT=8080
APP_HOST=0.0.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=fashionblue_staging
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DB_NAME=fashionblue_staging_db
DB_SSLMODE=require

# JWT
# ⚠️ Usar una clave diferente a producción
JWT_SECRET=CHANGE_ME_TO_RANDOM_SECURE_KEY_DIFFERENT_FROM_PROD
JWT_EXPIRATION=24h

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=/var/app/uploads

# CORS
CORS_ALLOWED_ORIGINS=https://staging.yourdomain.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# pgAdmin
PGADMIN_EMAIL=admin@staging.yourdomain.com
PGADMIN_PASSWORD=CHANGE_ME
PGADMIN_PORT=5050
